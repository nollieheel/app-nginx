server {
    listen 80 deferred;

    charset utf-8;
    server_name _;
    root <%= @root_dir %>;
    index index.html;

    access_log <%= @access_log %>;
    error_log <%= @error_log %>;

    auth_basic "Restricted Area";
    auth_basic_user_file <%= @auth_file %>;

    location = /robots.txt {
        allow all;
        log_not_found off;
        access_log off;
    }

    location ~ (^|/)\. {
        deny all;
    }
}
