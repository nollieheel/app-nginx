# A simple example

server {
    listen 80 deferred;

    charset utf-8;
    server_name _;
    root <%= @root_dir %>;

    access_log /var/log/nginx/server.access.log;
    error_log /var/log/nginx/server.error.log;

    location = /robots.txt {
        allow all;
        log_not_found off;
        access_log off;
    }

    location ~ (^|/)\. {
        deny all;
    }
}
